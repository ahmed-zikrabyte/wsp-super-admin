{
  "name": "man-next-app",
  "description": "Scaffold a modern Next.js 15 boilerplate with Tailwind, TypeScript, ShadCN, Biome, Ultracite, Husky, and multi-theme support.",
  "keywords": [
    "create-next-app",
    "nextjs-template",
    "nextjs",
    "tailwindcss",
    "typescript",
    "shadcn",
    "eslint",
    "biome",
    "ultracite",
    "husky",
    "boilerplate",
    "theme-provider",
    "dark-mode",
    "pnpm create"
  ],
  "version": "0.1.0",
  "private": false,
  "author": "Muhsin Abdul Nissar",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Muhsin-42/man-next-app.git"
  },
  "scripts": {
    "dev": "next dev --turbopack -p 9001",
    "build": "biome check --write  . && next build",
    "start": "next start -p 9001",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format . --write",
    "format:check": "biome format . --check",
    "fix-all": "npm run lint:fix && npm run format",
    "type-check": "tsc --noEmit --incremental",
    "upgrade": "npx npm-check-updates -u && npm install",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@lexical/react": "^0.33.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@tanstack/react-table": "^8.21.3",
    "@tiptap/extension-link": "^3.0.6",
    "@tiptap/extension-text-align": "^3.0.6",
    "@tiptap/extension-underline": "^3.0.6",
    "@tiptap/react": "^3.0.6",
    "@tiptap/starter-kit": "^3.0.6",
    "axios": "^1.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "confirmation-modal-ui": "^1.0.0",
    "date-fns": "^4.1.0",
    "js-file-download": "^0.4.12",
    "lexical": "^0.33.1",
    "lucide-react": "^0.508.0",
    "moment": "^2.30.1",
    "next": "15.3.2",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-calendar": "^6.0.0",
    "react-day-picker": "^9.8.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.60.0",
    "recharts": "^3.1.2",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.2.0",
    "zod": "^4.0.5",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@next/eslint-plugin-next": "^15.3.0",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.2",
    "globals": "^16.0.0",
    "lefthook": "^1.12.2",
    "lint-staged": "^15.5.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.2.9",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "ultracite": "5.0.35"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "npx ultracite format"
    ]
  }
}
